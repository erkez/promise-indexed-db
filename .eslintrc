{
  "rules": {
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "no-console": "off",
    "callback-return": [
      2,
      ["callback", "cb", "next"]
    ],
    "global-require": 2,
    "indent": [
      2,
      4
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "modules": true
  }
}
